<ul class="navbar-nav">
@if (User?.Identity?.IsAuthenticated ?? false)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="ManageAccount" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login">Login</a>
    </li>
}
</ul>